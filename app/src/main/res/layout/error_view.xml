<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/error_view_constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/error_constaint_two"
            android:layout_width="641dp"
            android:layout_height="379dp"
            android:layout_marginStart="65dp"
            android:layout_marginTop="289dp"
            android:layout_marginEnd="62dp"
            android:layout_marginBottom="283dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <View
                android:id="@+id/error_view"
                android:layout_width="636dp"
                android:layout_height="375dp"
                android:background="@drawable/error_view_rounded"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/error_view_title_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="Oops! System error"
                android:textColor="@color/whiteTextColor"
                android:textSize="36sp"
                app:layout_constraintBottom_toTopOf="@+id/error_view_detail_textView"
                app:layout_constraintStart_toStartOf="@+id/error_view_detail_textView" />

        <TextView
                android:id="@+id/error_view_detail_textView"
                android:layout_width="394dp"
                android:layout_height="116dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="We're sorry but something went wrong. Please try again. "
                android:textColor="@color/whiteTextColor"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.498" />

        <Button
                android:id="@+id/error_cancel_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="55dp"
                android:background="@null"
                android:fontFamily="@font/source_sans_pro"
                android:text="CANCEL"
                android:textColor="@color/whiteTextColor"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="@+id/error_retry_btn"
                app:layout_constraintEnd_toStartOf="@+id/error_retry_btn" />

        <Button
                android:id="@+id/error_retry_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="40dp"
                android:background="@null"
                android:fontFamily="@font/source_sans_pro"
                android:text="RETRY"
                android:textColor="@color/red"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
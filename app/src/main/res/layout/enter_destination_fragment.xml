<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@color/screenBackgroundColor">


    <View
            android:id="@+id/view"
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:layout_marginTop="43dp"
            android:background="@color/enterDestinationBtnBackground"
            app:layout_constraintStart_toStartOf="@+id/editTextTextPostalAddress"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPostalAddress" />

    <View
            android:id="@+id/view2"
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:layout_marginTop="42dp"
            android:background="@color/enterDestinationBtnBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPostalAddress" />

    <View
            android:id="@+id/view4"
            android:layout_width="270dp"
            android:layout_height="70dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="42dp"
            android:background="@color/enterDestinationBtnBackground"
            app:layout_constraintStart_toEndOf="@+id/view2"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPostalAddress" />

    <ImageView
            android:id="@+id/back_to_welcome_btn"
            android:layout_width="49dp"
            android:layout_height="36dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.017"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_left_arrow_2" />

    <TextView
            android:id="@+id/address_title_one_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/source_sans_pro"
            android:text="Address One Title"
            android:textColor="@color/whiteTextColor"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/view" />

    <TextView
            android:id="@+id/address_detail_one_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro"
            android:text="Address One Detail"
            android:textColor="@color/grey"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/address_title_one_textView"
            app:layout_constraintTop_toBottomOf="@+id/address_title_one_textView" />

    <TextView
            android:id="@+id/address_title_two_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/source_sans_pro"
            android:text="Address Two Title"
            android:textColor="@color/whiteTextColor"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/view2" />

    <TextView
            android:id="@+id/address_detail_two_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro"
            android:text="Address Two Detail"
            android:textColor="@color/grey"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/address_title_two_textView"
            app:layout_constraintTop_toBottomOf="@+id/address_title_two_textView" />

    <TextView
            android:id="@+id/address_title_three_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/source_sans_pro"
            android:text="Address Three Title"
            android:textColor="@color/whiteTextColor"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toTopOf="@+id/view4" />

    <TextView
            android:id="@+id/address_detail_three_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro"
            android:text="Address Three Detail"
            android:textColor="@color/grey"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/address_title_three_textView"
            app:layout_constraintTop_toBottomOf="@+id/address_title_three_textView" />

    <ImageView
            android:id="@+id/imageView4"
            android:layout_width="54dp"
            android:layout_height="47dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:srcCompat="@drawable/ic_destination_pin" />

    <ImageView
            android:id="@+id/imageView5"
            android:layout_width="54dp"
            android:layout_height="47dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/view2"
            app:layout_constraintStart_toStartOf="@+id/view2"
            app:layout_constraintTop_toTopOf="@+id/view2"
            app:srcCompat="@drawable/ic_destination_pin" />

    <ImageView
            android:id="@+id/imageView6"
            android:layout_width="54dp"
            android:layout_height="47dp"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/view4"
            app:layout_constraintStart_toStartOf="@+id/view4"
            app:layout_constraintTop_toTopOf="@+id/view4"
            app:srcCompat="@drawable/ic_destination_pin" />


    <EditText
            android:id="@+id/editTextTextPostalAddress"
            android:layout_width="900sp"
            android:layout_height="51dp"
            android:layout_marginTop="24dp"
            android:background="@null"
            android:cursorVisible="true"
            android:defaultFocusHighlightEnabled="true"
            android:ems="10"
            android:focusedByDefault="true"
            android:fontFamily="@font/source_sans_pro"
            android:hint="Search address or place"
            android:inputType="textPostalAddress"
            android:textColor="@color/whiteTextColor"
            android:textColorHint="@color/grey"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="36sp"
            app:layout_constraintStart_toStartOf="@+id/enter_destination_title_textView"
            app:layout_constraintTop_toBottomOf="@+id/enter_destination_title_textView" />

    <TextView
            android:id="@+id/enter_destination_title_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:text="What's your destination?"
            android:textColor="@color/whiteTextColor"
            android:textSize="43sp"
            app:layout_constraintStart_toEndOf="@+id/back_to_welcome_btn"
            app:layout_constraintTop_toBottomOf="@+id/back_to_welcome_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>
